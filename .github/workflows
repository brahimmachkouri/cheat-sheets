name: Convert Markdown to HTML and Deploy to GitHub Pages

on:
  push:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Install pandoc
        run: sudo apt-get update && sudo apt-get install -y pandoc

      - name: Convert Markdown to HTML
        run: |
          mkdir -p docs
          pandoc multipass.md -o docs/multipass.html --standalone

      - name: Commit HTML to docs/
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add docs/multipass.html
          git commit -m "Auto-generate HTML from Markdown [ci skip]" || echo "Nothing to commit"
          git push
